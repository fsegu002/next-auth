datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int      @default(autoincrement()) @id
  email         String   @unique
  password      String
  passwordConfirmation String
  firstName     String?
  lastName      String?
  logins        Login[]
}

model Login {
  id        Int @default(autoincrement()) @id
  lastLogin DateTime @default(now())
  user      User @relation(fields: [userId], references: [id])
  userId    Int
}